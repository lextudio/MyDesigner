<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pg="clr-namespace:MyDesigner.Designer.PropertyGrid;assembly=MyDesigner.Designer"
             xmlns:local="clr-namespace:MyDesigner.XamlDesigner"
             x:Class="MyDesigner.XamlDesigner.Views.Tools.BoundPropertyGridView"
             x:Name="root"
             x:DataType="local:Shell">
    
    <!-- Exact same binding as original: SelectedItems="{Binding CurrentDocument.SelectionService.SelectedItems}" -->
    <pg:PropertyGridView x:Name="uxPropertyGridView"
                         SelectedItems="{Binding CurrentDocument.SelectionService.SelectedItems}" />
    
</UserControl>