<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyDesigner.XamlDesigner"
             xmlns:services="clr-namespace:MyDesigner.Designer.Services;assembly=MyDesigner.Designer"
             x:Class="MyDesigner.XamlDesigner.Views.Tools.BoundErrorListView"
             x:DataType="local:Shell">
    
    <!-- Exact same binding as original: ItemsSource="{Binding CurrentDocument.XamlErrorService.Errors}" -->
    <ListBox ItemsSource="{Binding CurrentDocument.XamlErrorService.Errors}"
             Background="Transparent"
             BorderThickness="0">
        <ListBox.ItemTemplate>
            <DataTemplate x:DataType="services:XamlError">
                <StackPanel Orientation="Horizontal" Margin="2">
                    <TextBlock Text="{Binding Line}" 
                               Width="40" 
                               Foreground="Blue" 
                               FontWeight="Bold"/>
                    <TextBlock Text=" / " Foreground="Gray"/>
                    <TextBlock Text="{Binding Column}" 
                               Width="40" 
                               Foreground="Blue"/>
                    <TextBlock Text=" - " Foreground="Gray"/>
                    <TextBlock Text="{Binding Message}" 
                               TextWrapping="Wrap"
                               Foreground="Red"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
    
</UserControl>