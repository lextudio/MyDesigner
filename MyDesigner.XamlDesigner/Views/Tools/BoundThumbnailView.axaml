<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:thumb="clr-namespace:MyDesigner.Designer.ThumbnailView;assembly=MyDesigner.Designer"
             xmlns:local="clr-namespace:MyDesigner.XamlDesigner"
             x:Class="MyDesigner.XamlDesigner.Views.Tools.BoundThumbnailView"
             x:DataType="local:Shell">
    
    <!-- Exact same binding as original: DesignSurface="{Binding CurrentDocument.DesignSurface}" -->
    <thumb:ThumbnailView x:Name="uxThumbnailView" 
                         DesignSurface="{Binding CurrentDocument.DesignSurface}" />
    
</UserControl>