<UserControl
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="MyDesigner.XamlDesigner.OpenProjectDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <!--  Modern Button Style  -->
        <Style Selector="Button.ModernOptionButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#FFE0E0E0" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="Height" Value="80" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Padding" Value="20,15" />
        </Style>

        <Style Selector="Button.ModernOptionButton:pointerover">
            <Setter Property="Background" Value="#FFF5F5F5" />
            <Setter Property="BorderBrush" Value="#FF007ACC" />
        </Style>

        <Style Selector="Button.ModernOptionButton:pressed">
            <Setter Property="Background" Value="#FFE8E8E8" />
        </Style>
    </UserControl.Styles>

    <Grid Margin="40,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock
                FontSize="28"
                FontWeight="Bold"
                Foreground="#FF007ACC"
                Text="Open Project" />
         
        </StackPanel>

        <!--  Separator  -->
        <Border
            Background="#FFE0E0E0"
            Grid.Row="1"
            Height="1"
            Margin="0,10,0,20" />

        <!--  Options  -->
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Margin="0,0,0,35">
            <!--  Option 1: Solution/Project  -->
            <Button
                Classes="ModernOptionButton"
                Click="BtnOpenProject_Click"
                Height="90"
                x:Name="btnOpenProject">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Icon  -->
                    <Border
                        Background="#FF007ACC"
                        CornerRadius="5"
                        Grid.Column="0"
                        Height="50"
                        Margin="0,0,15,0"
                        Width="50">
                        <TextBlock
                            FontSize="28"
                            HorizontalAlignment="Center"
                            Text="📁"
                            VerticalAlignment="Center" />
                    </Border>

                    <!--  Text  -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#FF333333"
                            Text="Solution or Project" />
                        <TextBlock
                            FontSize="11"
                            Foreground="#FF666666"
                            Margin="0,2,0,0"
                            />
                        <TextBlock
                            FontSize="10"
                            Foreground="#FF999999"
                            Margin="0,2,0,0"
                            Text="Open a complete solution with multiple projects or a single project file"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>

            <!--  Option 2: Folder  -->
            <Button
                Classes="ModernOptionButton"
                Click="BtnOpenFolder_Click"
                Height="96"
                x:Name="btnOpenFolder">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Icon  -->
                    <Border
                        Background="#FF107C10"
                        CornerRadius="5"
                        Grid.Column="0"
                        Height="50"
                        Margin="0,0,15,0"
                        Width="50">
                        <TextBlock
                            FontSize="28"
                            HorizontalAlignment="Center"
                            Text="📂"
                            VerticalAlignment="Center" />
                    </Border>

                    <!--  Text  -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#FF333333"
                            Text="Folder" />
                        <TextBlock
                            FontSize="11"
                            Foreground="#FF666666"
                            Margin="0,2,0,0"
                             />
                        <TextBlock
                            FontSize="10"
                            Foreground="#FF999999"
                            Margin="0,2,0,0"
                            Text="Browse and open a folder containing project files"                       
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>

            <!--  Option 3: XAML File  -->
            <Button
                Classes="ModernOptionButton"
                Click="BtnOpenFile_Click"
                Height="89"
                x:Name="btnOpenFile">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Icon  -->
                    <Border
                        Background="#FFE81123"
                        CornerRadius="5"
                        Grid.Column="0"
                        Height="50"
                        Margin="0,0,15,0"
                        Width="50">
                        <TextBlock
                            FontSize="28"
                            HorizontalAlignment="Center"
                            Text="📄"
                            VerticalAlignment="Center" />
                    </Border>

                    <!--  Text  -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#FF333333"
                            Text="XAML File" />
                        <TextBlock
                            FontSize="11"
                            Foreground="#FF666666"
                            Margin="0,2,0,0"
                             />
                        <TextBlock
                            FontSize="10"
                            Foreground="#FF999999"
                            Margin="0,2,0,0"
                            Text="Open a single XAML file for quick editing"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>
        </StackPanel>

        <!--  Footer  -->
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <Button
                Background="White"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                Click="BtnCancel_Click"
                Content="Cancel"
                CornerRadius="3"
                Cursor="Hand"
                Height="35"
                Padding="10,5"
                Width="120">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#FFF0F0F0" />
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
