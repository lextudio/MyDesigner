<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="MyDesigner.XamlDesigner.NewProjectWindow">
    <UserControl.Styles>
        <!--  Modern TextBox Style  -->
        <Style Selector="TextBox.ModernTextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#FF333333" />
            <Setter Property="BorderBrush" Value="#FF007ACC" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <!--  Modern Button Style  -->
        <Style Selector="Button.ModernButton">
            <Setter Property="Background" Value="#FF007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="CornerRadius" Value="3" />
        </Style>


        <!--  Modern RadioButton Style  -->
        <Style Selector="RadioButton.ModernRadioButton">
            <Setter Property="Foreground" Value="#FF333333" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="0,0,20,0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </UserControl.Styles>

    <Grid Margin="30" x:Name="spExport">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Foreground="#FF007ACC"
                HorizontalAlignment="Left"
                Text="Create a New Project" />
           
        </StackPanel>

        <!--  Project Name  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#FF333333"
                Margin="0,0,0,8"
                Text="Project Name " />
            <TextBox
                Classes="ModernTextBox"
                Text="MyAvaloniaProject"
                x:Name="ProjectNameTextBox" />
        </StackPanel>

        <!--  Project Location  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#FF333333"
                Margin="0,0,0,8"
                Text="Project Location " />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Classes="ModernTextBox"
                    Grid.Column="0"
                    Text="C:\Projects"
                    x:Name="ProjectLocationTextBox" />
                <Button
                    Background="#FF666666"
                    BorderThickness="0"
                    Click="BrowseLocation_Click"
                    Content="Browse..."
                    Foreground="White"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="12,6" />
            </Grid>
        </StackPanel>

        <!--  Project Type  -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#FF333333"
                Margin="0,0,0,8"
                Text="Project Type " />
            <StackPanel Orientation="Horizontal">
                <RadioButton
                    Classes="ModernRadioButton"
                    Content="Avalonia UI"
                    IsChecked="True"
                    x:Name="AvaloniaRadio" />
                <RadioButton
                    Classes="ModernRadioButton"
                    Content="WPF"
                    x:Name="WpfRadio" />
                <RadioButton
                    Classes="ModernRadioButton"
                    Content="MAUI"
                    x:Name="MauiRadio" />
                <RadioButton
                    Classes="ModernRadioButton"
                    Content="Uno Platform"
                    x:Name="UnoRadio" />
            </StackPanel>
        </StackPanel>

       

        <!--  Preview Area  -->
        <Border
            Background="#FFF8F9FA"
            BorderBrush="#FFCCCCCC"
            BorderThickness="1"
            CornerRadius="5"
            Grid.Row="5"
            Margin="0,0,0,20">
            <StackPanel Margin="15">
                <TextBlock
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#FF333333"
                    Text="Project Preview " />
                <TextBlock
                    FontSize="12"
                    Foreground="#FF666666"
                    Margin="0,10,0,0"
                    Text="Project will be created at: C:\Projects\MyAvaloniaProject"
                    TextWrapping="Wrap"
                    x:Name="PreviewTextBlock" />
            </StackPanel>
        </Border>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="6"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Background="#FF666666"
                Classes="ModernButton"
                Click="CancelButton_Click"
                Content="Cancel "
                Margin="0,0,10,0"
                x:Name="CancelButton" />
            <Button
                Classes="ModernButton"
                Click="CreateButton_Click"
                Content="Create Project "
                x:Name="CreateButton" />
        </StackPanel>
    </Grid>
</UserControl>
