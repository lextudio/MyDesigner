<UserControl
    x:Class="MyDesigner.Designer.PropertyGrid.Editors.BrushEditor.BrushTypeEditor"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        Background="Transparent"
        BorderBrush="Black"
        BorderThickness="1"
        Cursor="Hand"
        Height="16"
        HorizontalAlignment="Left"
        Width="30">
        <Border Background="{Binding Value}" />
    </Border>
</UserControl>