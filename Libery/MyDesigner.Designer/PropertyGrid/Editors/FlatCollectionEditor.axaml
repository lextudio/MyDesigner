<Window
    Height="438"
    Title="Edit Items"
    Width="750"
    WindowStartupLocation="CenterScreen"
    x:Class="MyDesigner.Designer.PropertyGrid.Editors.FlatCollectionEditor"
    xmlns="https://github.com/avaloniaui"
    xmlns:PropertyGrid="clr-namespace:MyDesigner.Designer.PropertyGrid"
    xmlns:editors="clr-namespace:MyDesigner.Designer.PropertyGrid.Editors"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Border
            BorderBrush="Black"
            BorderThickness="0.75"
            Margin="10,40,10,10"
            Name="ListBoxBorder">
            <Border.Resources>
                <ResourceDictionary>
                    <!-- MergedDictionaries not supported in same way in Avalonia -->
                    <editors:CollectionTemplateSelector x:Key="CollectionTemplateSelector" />
                </ResourceDictionary>
            </Border.Resources>
            <ListBox
                ItemTemplate="{StaticResource CollectionTemplateSelector}"
                SelectionChanged="ListBox_SelectionChanged"
                x:Name="ListBox" />
        </Border>
        <ComboBox
            Height="23"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            Name="ItemDataType"
            VerticalAlignment="Top"
            Width="259" />
        <StackPanel Grid.Column="1" Margin="0,10,0,0" Spacing="8">
            <Button
                Click="OnAddItemClicked"
                Content="Add"
                Height="23"
                Name="AddItem"
                Width="75" />
            <Button
                Click="OnRemoveItemClicked"
                Content="Remove"
                Height="23"
                Name="RemoveItem"
                Width="75" />
            <Button
                Click="OnMoveItemUpClicked"
                Content="Move Up"
                Height="23"
                Name="MoveUpItem"
                Width="75" />
            <Button
                Click="OnMoveItemDownClicked"
                Content="Move Down"
                Height="23"
                Name="MoveDownItem"
                Width="75" />
        </StackPanel>
        <Border
            BorderBrush="Black"
            BorderThickness="0.75"
            Grid.Column="2"
            Margin="10">
            <PropertyGrid:PropertyGridView Margin="0.5" x:Name="PropertyGridView" />
        </Border>
    </Grid>
</Window>